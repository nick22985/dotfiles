#!/usr/bin/env bash

# Install fonts (idempotent)

# Set DOTFILES_DIR if not already set
script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
export DOTFILES_DIR="${DOTFILES_DIR:-$script_dir}"

# Source shared utilities
source "$DOTFILES_DIR/lib/utils.sh"

# Parse arguments
parse_args "$@"

log "Installing fonts..."

# Detect package manager and install fonts
if command_exists pacman; then
    log_info "Detected Arch Linux (pacman)"

    # Font packages for Arch (official repos)
    font_packages=(
        "ttf-font-awesome"          # FontAwesome 6 (includes Solid, Regular, Brands)
        "ttf-fira-code"            # Fira Code with ligatures
        "ttf-jetbrains-mono"       # JetBrains Mono
        "noto-fonts"               # Google Noto fonts
        "noto-fonts-emoji"         # Emoji support
        "noto-fonts-cjk"           # Chinese, Japanese, Korean
        "ttf-liberation"           # Liberation fonts (Arial/Times alternatives)
        "ttf-dejavu"               # DejaVu fonts
        "ttf-opensans"             # Open Sans
        "ttf-roboto"               # Roboto font family
        "fontconfig"               # Font configuration
    )

    fonts_to_install=()
    for font in "${font_packages[@]}"; do
        if ! is_installed_pacman "$font"; then
            fonts_to_install+=("$font")
        else
            log_success "$font already installed"
        fi
    done

    if [ ${#fonts_to_install[@]} -gt 0 ]; then
        log_info "Installing fonts: ${fonts_to_install[*]}"
        if [[ $DRY_RUN == "0" ]]; then
            sudo pacman -S --needed --noconfirm "${fonts_to_install[@]}" || log_warn "Some fonts may have failed to install"
        fi
    else
        log_success "All official fonts already installed"
    fi

    # AUR font packages
    aur_font_packages=()

    # Check which AUR font packages need to be installed
    aur_fonts_to_install=()
    for font in "${aur_font_packages[@]}"; do
        if ! is_installed_pacman "$font"; then
            aur_fonts_to_install+=("$font")
        else
            log_success "$font (AUR) already installed"
        fi
    done

    if [ ${#aur_fonts_to_install[@]} -gt 0 ]; then
        # Check if paru is available
        if command_exists paru; then
            log_info "Installing AUR fonts: ${aur_fonts_to_install[*]}"
            if [[ $DRY_RUN == "0" ]]; then
                paru -S --needed --noconfirm "${aur_fonts_to_install[@]}" || log_warn "Some AUR fonts may have failed to install"
            fi
        else
            log_warn "paru not found, skipping AUR fonts. Run packages script first to install paru."
        fi
    else
        log_success "All AUR fonts already installed"
    fi

    # Install Nerd Fonts from official repository
    install_nerd_fonts

    # Verify FontAwesome installation
    log_info "Verifying FontAwesome installation..."
    if [[ $DRY_RUN == "0" ]]; then
        if fc-list | grep -i "font awesome" &> /dev/null; then
            log_success "FontAwesome fonts detected:"
            fc-list | grep -i "font awesome" | head -3 | while read -r font; do
                log "  - $(echo "$font" | cut -d: -f2 | xargs)"
            done
        else
            log_warn "FontAwesome fonts not detected in font cache"
        fi
    fi

elif command_exists apt; then
    log_info "Detected Ubuntu/Debian (apt)"

    # Font packages for Ubuntu/Debian
    font_packages=(
        "fontconfig"
        "fonts-font-awesome"
        "fonts-firacode"
        "fonts-jetbrains-mono"
        "fonts-noto"
        "fonts-noto-color-emoji"
        "fonts-liberation"
        "fonts-dejavu-core"
    )

    # Check which packages need to be installed
    fonts_to_install=()
    for font in "${font_packages[@]}"; do
        if ! is_installed_apt "$font"; then
            fonts_to_install+=("$font")
        else
            log_success "$font already installed"
        fi
    done

    if [ ${#fonts_to_install[@]} -gt 0 ]; then
        log_info "Updating package list..."
        if [[ $DRY_RUN == "0" ]]; then
            sudo apt update -qq
        fi

        log_info "Installing fonts: ${fonts_to_install[*]}"
        if [[ $DRY_RUN == "0" ]]; then
            sudo apt install -y "${fonts_to_install[@]}" || log_warn "Some fonts may have failed to install"
        fi
    else
        log_success "All fonts already installed"
    fi

    # Refresh font cache for Ubuntu/Debian
    log_info "Refreshing font cache..."
    if [[ $DRY_RUN == "0" ]]; then
        fc-cache -fv &> /dev/null || log_warn "Failed to refresh font cache"
    fi
    log_success "Font cache refreshed"

else
    log_warn "Unknown package manager. Please install fonts manually:"
    log "  - fontconfig, font-awesome, fira-code, jetbrains-mono, noto fonts"
fi

log_success "Font installation complete"
