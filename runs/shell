#!/usr/bin/env bash


script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
export DOTFILES_DIR="${DOTFILES_DIR:-$script_dir}"

source "$DOTFILES_DIR/lib/utils.sh"

parse_args "$@"

log "Setting up shell environment..."

setup_zsh() {
    log_info "Setting up zsh as default shell..."

    if ! command_exists zsh; then
        log_warn "Zsh is not installed. Run the 'packages' script first."
        return 1
    fi

    zsh_path=$(which zsh)

    current_shell=$(getent passwd "$USER" | cut -d: -f7)
    if [[ "$current_shell" != "$zsh_path" ]]; then
        log_info "Current shell: $current_shell"
        log_info "Changing default shell to zsh..."

        if ! grep -q "^$zsh_path$" /etc/shells 2>/dev/null; then
            log_info "Adding zsh to /etc/shells..."
            if [[ $DRY_RUN == "0" ]]; then
                echo "$zsh_path" | sudo tee -a /etc/shells
            fi
        else
            log_success "Zsh already in /etc/shells"
        fi

        log_info "Setting zsh as default shell..."
        if [[ $DRY_RUN == "0" ]]; then
            chsh -s "$zsh_path"
        fi
        log_success "Default shell changed to zsh (restart terminal to take effect)"
    else
        log_success "Zsh is already the default shell"
    fi
}

setup_fish() {
    log_info "Setting up fish shell (available but not default)..."

    if ! command_exists fish; then
        log_info "Fish not installed, skipping fish setup"
        return 0
    fi

    fish_path=$(which fish)

    if ! grep -q "^$fish_path$" /etc/shells 2>/dev/null; then
        log_info "Adding fish to /etc/shells..."
        if [[ $DRY_RUN == "0" ]]; then
            echo "$fish_path" | sudo tee -a /etc/shells
        fi
    else
        log_success "Fish already in /etc/shells"
    fi

    if ! fish -c "functions -q fisher" 2>/dev/null; then
        log_info "Installing Fisher plugin manager..."
        if [[ $DRY_RUN == "0" ]]; then
            fish -c "curl -sL https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish | source && fisher install jorgebucaran/fisher" 2>/dev/null || {
                log_warn "Failed to install Fisher automatically. You can install it manually later with:"
                log "  fish -c 'curl -sL https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish | source && fisher install jorgebucaran/fisher'"
            }
        fi
    else
        log_success "Fisher plugin manager already installed"
    fi
}

setup_zsh
setup_fish

if command_exists starship; then
    log_success "Starship detected, it will be configured via shell configs"
else
    log_info "Starship not found, install it for better prompt experience"
fi

log_success "Shell setup complete"
